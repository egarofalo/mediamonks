{% extends "base.html.twig" %}

{% block title 'Edit Post '~post.id %}
    
{% block main %}
    
    <div class="container">

        <div class="row justify-content-center">

            <div class="col-12 col-md-10 col-lg-8 col-xl-7">     

                <div class="card">

                    <div class="card-header">
                        <h5 class="mb-0">Post Data</h5>
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': 'frm-post-edit'}}) }}                

                    <div class="card-body">

                        {{ form_row(form.title, {'label': 'Title'}) }}
                        {{ form_row(form.body, {'label': 'Content', 'attr': {'id': 'post_body', 'rows': '6'}}) }}
                        {{ form_row(form.tags, {'label': 'Chose Tags'}) }}
                        
                        {{ form_errors(form) }}

                    </div>

                    <div class="card-footer text-right">
                        <button type="submit" class="btn btn-primary btn-submit">
                            <span>Edit</span>
                            <span class="d-none">Saving... <i class="fa fa-refresh fa-spin fa-fw" aria-hidden="true"></i></span>
                        </button>   
                    </div>

                    {{ form_end(form) }}

                </div>

            </div>

        </div>

    </div>
    
{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset('build/scripts/admin-post.js') }}"></script>

{% endblock %}